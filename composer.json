        "doctrine/doctrine-bundle": "~1.2",
        "doctrine/doctrine-fixtures-bundle": ">=2.2.0",
        "liip/functional-test-bundle": "dev-master",
        "antimattr/google-bundle": "dev-master",
        "presta/sitemap-bundle": "dev-master"
