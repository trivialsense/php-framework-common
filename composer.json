        "psr-0": {
            "TrivialSense": [
                "src/",
                "tests/"
            ]
        }
    },

    "require": {
        "php": ">=5.4",
        "symfony/symfony": "~2.6",
        "doctrine/orm": "~2.2,>=2.2.3,<2.5",
